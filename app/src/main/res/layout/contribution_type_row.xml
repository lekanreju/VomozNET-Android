<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/contribution_type_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_weight="0.50"
        android:background="@drawable/straight_border_2"
        android:gravity="center_vertical|start"
        android:text="Type"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/contribution_amount_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_weight="0.40"
        android:background="@drawable/straight_border_2"
        android:gravity="center_vertical|end"
        android:text="Amount"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/contribution_delete_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:src="@mipmap/ic_delete" />

    <View
        android:id="@+id/contribution_delete_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:visibility="gone" />
</LinearLayout>