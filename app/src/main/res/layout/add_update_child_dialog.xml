<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/dark_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/relative_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="top"
            android:padding="2dp">

            <ImageView
                android:id="@+id/organization_image"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_circle_person" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/organization_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Update Child Information"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/kid_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@color/dark_gray"
            android:text="Close"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/kid_first_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="First Name"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@+id/kid_middle_name"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/kid_middle_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="Middle Name"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@+id/kid_preferred_name"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/kid_preferred_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="Preferred Name"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@+id/kid_last_name"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/kid_last_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="Last Name"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@+id/kid_birth_date"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/kid_birth_date"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="Birth Date"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@+id/kid_school_name"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/kid_school_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="School Name"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@+id/kid_grade"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/kid_grade"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="Grade"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@+id/kid_age_group"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/kid_age_group"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="Age Group"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@+id/kid_gender"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/kid_gender"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="Gender"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@+id/kid_middle_name"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/kid_suffix"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="Suffix"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusDown="@+id/kid_save_button"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <Button
            android:id="@+id/kid_save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border2"
            android:text="Save"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
