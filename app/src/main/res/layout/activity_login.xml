                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:text="@string/app_name"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="23sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
